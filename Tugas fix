#include <iostream>
using namespace std;
class clsperpustakaan {
	private :
		string nama;
		string penulis;
		int tahun;
		string kategori;
	public :
		void setNama (string n){
			nama=n;
		}
		void setPenulis (string p){
			penulis=p;
		}
		void setTahun (int t){
			tahun=t;
		}
		void setKategori (string k){
			kategori=k;
		}
		string getNama (){
			return nama;
		}
		string getPenulis (){
			return penulis;
		}
		int getTahun (){
			return tahun;
		}
		void cetak (string kategori){
			cout<<"Nama buku : "<<nama<<endl;
			cout<<"Nama penulis : "<<penulis<<endl;
			cout<<"Tahun terbit : "<<tahun<<endl;
			cout<<"Kategori : "<<kategori<<endl;
		}
};

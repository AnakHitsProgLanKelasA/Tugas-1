#include <iostream>
using namespace std;
class clsperpustakaan {
	private :
		string nama;
		string penulis;
		int tahun;
		string kategori;
	public :
		void setNama (string n){
			nama=n;
		}
		void setPenulis (string p){
			penulis=p;
		}
		void setTahun (int t){
			tahun=t;
		}
		void setKategori (string k){
			kategori=k;
		}
		string getNama (){
			return nama;
		}
		string getPenulis (){
			return penulis;
		}
		int getTahun (){
			return tahun;
		}
		void cetak (string kategori){
			cout<<"nama buku :"<<nama<<endl;
			cout<<"nama penulis :"<<penulis<<endl;
			cout<<"tahun terbit :"<<tahun<<endl;
			cout<<"kategori :"<<kategori<<endl;
		}
};
int main(){
	cout<<"1. teknologi :"<<endl;
	cout<<"2. filsafat :"<<endl;
	cout<<"3. sejarah :"<<endl;
	cout<<"4. agama :"<<endl;
	cout<<"5. psikologi :"<<endl;
	cout<<"6. politik :"<<endl;
	cout<<"7. fiksi :"<<endl;
	
	int opsi;
	cout<<"masukan pilihan kategoti :";
	cin>>opsi;
	
	switch (opsi) {
		case 1 : 
		{
		
		string kategori="TEKNOLOGI";
	    clsperpustakaan *buku1 = new clsperpustakaan ();
	    buku1->setNama("fajar");
	    buku1->setPenulis("jankrik");
	    buku1->setTahun(1998);
	    buku1->setKategori(kategori);
	    buku1->cetak(kategori);
	    break;
		}
		case 2 : 
		{
		string kategori="FILSAFAT";
		break;
		}
		case 3 : 
		{
			string kategori="SEJARAH";
		}
		break;
		case 4 : 
		{
			string kategori="AGAMA";
		}
		break;
		case 5 : 
		{
			string kategori="PSIKOLOGI";
		}
		break;
		case 6 : 
		{
			string kategori="POLITIK";
		}
		break;
		case 7 : 
		{
			string kategori="FIKSI";
		}
		break;
}
}
